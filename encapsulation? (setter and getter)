   do{
   System.out.print("\nEnter blood type of patient: ");
   bt = sc.nextLine();
   System.out.print("Enter the rhesus factor (+ or -): ");
   rh = sc.nextLine();
   if(bt.isEmpty()&&rh.isEmpty()){
      BloodData empty = new BloodData();
      empty.display();
   }else{
   switch (bt){
      case "A":
      BloodData bd = new BloodData();
      bd.setBloodType(bt);
      bd.setRhFactor(rh);
      bd.display();
      break;
      case "B":
      BloodData bd1 = new BloodData();
      bd1.setBloodType(bt);
      bd1.setRhFactor(rh);
      bd1.display();
      break;
